<div class="container col-md-6 mt-3 mb-3 card bg-light">
   <form action="/plush/edit/{{ plush._id }}" method="post">
      <h1 class="text text-danger text-center text-uppercase mt-3">Edit product</h1>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Full name</label> 
        <input class="form-control" type="text" name="name" value="{{ plush.name }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Image: </label>
        <img src="{{plush.image}}" alt="" width="100" height="100">
         <input class="form-control" type="url" name="image" value="{{ plush.image }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Price</label>
         <input class="form-control" type="number" name="price" value="{{ plush.price }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Size</label>
         <select class="form-control" name="size" value="{{ plush.size }}" required>
            <option value="Big">Big</option>
            <option value="Medium">Medium</option>
            <option value="Small">Small</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Quantity</label>
         <input class="form-control" type="number" name="quantity" value="{{ plush.quantity }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Category</label>
         <select class="form-control" name="category" value="{{ plush.category }}">
            <option value="Cartoon">Cartoon</option>
            <option value="Animal">Animal</option>
         </select>
      </div>
      <div class="form-group mt-3">
        <label class="h5 text text-success" for="">Brand</label> 
        <input class="form-control" type="text" name="brand" value="{{ plush.brand }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Description</label>
         <input class="form-control" type="text" name="description" value="{{ plush.description }}" required>
      </div>
      <div class="form-group text-center mt-3 mb-3">
         <input class="btn btn-primary" type="submit" value="Edit">
      </div>
   </form>
</div>
 <style>
      img{
         height: 100px;
         width: 100px;
      }
   </style>